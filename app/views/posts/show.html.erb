<% flash.each do |key, msg| %>
  <div class="alert alert-<%= key %>"><%= msg %></div>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<div class="show-post">
  <%= image_tag(@post.picture) %>
</div>

<%= link_to "Edit", edit_post_path(@post) %> |
<%= link_to "Back", posts_path %>
