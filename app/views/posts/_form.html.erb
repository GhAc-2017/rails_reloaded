<%= error_messages_for(post) %>

<%= form_with(model: post, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :picture %>
    <%= form.file_field :picture %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <%= link_to 'Back', posts_path %>
  
<% end %>
