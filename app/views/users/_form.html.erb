<%= error_messages_for(@user) %>

<%= form_for(@user) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, required:true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <%= link_to "Back", users_path, class: "link-option" %>

<% end %>
