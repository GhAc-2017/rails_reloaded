<%= link_to "Back", root_path, class: "link-option" %>

<h1>Users</h1>

<div class="searcher">
  <%= form_tag(users_path,method: :get) do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" , name: nil %>
  <% end %>

  <%= link_to "Reset", users_path, class: "link-option" %>
</div>

<table class="show-table-data">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to "Show", user, class: "link-option" %></td>
        <td><%= link_to "Edit", edit_user_path(user), class: "link-option" %></td>
        <td><%= link_to "Destroy", user, method: :delete, data: { confirm: "Are you sure?" }, class: "link-option" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New User", new_user_path, class: "link-option" %>
